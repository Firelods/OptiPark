    {
      "name": "Reservations",
      "item": [
        {
          "name": "Reserve Spot - Normal User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.spot_id) {",
                  "        pm.environment.set('reserved_spot_id', jsonData.spot_id);",
                  "        pm.test('Spot reserved successfully', function() {",
                  "            pm.expect(jsonData).to.have.property('spot_id');",
                  "            pm.expect(jsonData.status).to.equal(2);",
                  "        });",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"block_id\": \"A\",\n  \"user_type\": \"NORMAL\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/reserve",
              "host": ["{{base_url}}"],
              "path": ["reserve"]
            },
            "description": "Réserver une place pour un utilisateur normal. L'algorithme trouvera la place la plus proche en fonction de la météo."
          },
          "response": []
        },
